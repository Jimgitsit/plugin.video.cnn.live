<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.cnn.live"
       name="CNN Live"
       version="0.0.1"
       provider-name="rooster">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.script"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">CNN Live</summary>
        <description lang="en">This XBMC plugin automatically plays news videos from CNN.</description>
    </extension>
</addon>
